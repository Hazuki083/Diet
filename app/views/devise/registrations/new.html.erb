<div class="cover">
  <div class="container">
    <div class="user" style="min-height: 500px">
      <div class="card col-sm-5 mx-auto mt-5">
        <div class="card-body">
          <h4 class="mt-1 mb-3 bg-gray text-center ">新規登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"%>
        </div>

        <div class="field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, autofocus: true, :class => "form-control" %>
        </div>

        <div class="field">
          <%= f.label :sex, "性別" %><br />
          <%= f.label :man, "男性"  %>
          <%= f.radio_button :sex, :man %>
          <%= f.label :woman, "女性" %>
          <%= f.radio_button :sex, :woman %>
        </div>


        <div class="field">
          <%= f.label :age, "年齢" %>
          <%= f.text_field :age , :class => "form-control"%>
        </div>

        <div class="field">
          <%= f.label :height, "身長" %>
          <%= f.text_field :height, :class => "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "確認用パスワード" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %><br />
        </div>

        <div class="actions">
          <%= f.submit "新規登録！", :class => "btn btn-outline-warning btn-block"  %><br />
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
     </div>
    </div>
   </div>
  </div>

</div>