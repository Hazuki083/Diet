<div class="bg-info p-2 text-dark bg-opacity-50">
  <p id="notice"><%= notice %></p>
 <div class="user" style="min-height: 500px">
  <div class="card col-sm-5 mx-auto mt-5">
    <div class="card-body">
      <h4 class="mt-1 mb-3 bg-gray text-center ">詳細</h4>
        <p>
          <strong>体重</strong>
          <%= @blog.weight %> kg
        </p>

        <p>
          <strong>体脂肪</strong>
          <%= @blog.body_fat %> %
        </p>

         <p>
           <strong>メモ</strong>
           <%= @blog.memo %>
        </p>

        <p>
          <strong>画像</strong>
          <div class="post-body">
                <%= attachment_image_tag @blog, :image, size: "300x200" %>
          </div>

        </p>

        <p>
          <strong>日時</strong>
          <%= @blog.created_at.strftime('%Y/%m/%d') %>
        </p>


        <%= link_to '編集', edit_blog_path(@blog) %>
        <%= link_to '消去', blog_path(@blog.id), method: :delete, data: { confirm: '本当に消去しますか?' } %>
        <%= link_to '戻る', blogs_path %>

        </div>
    </div>
  </div>
</div>