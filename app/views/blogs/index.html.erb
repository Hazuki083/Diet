<p id="notice">
  <%= notice %>
</p>
<div class="toppage">
  <h1 class="top">カレンダー</h1>
  <br>

  <div class="row">
    <div class="col-md-4">
      <div class="schedule">今日の成果</div>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>タイトル</th>
            <th>日程</th>
          </tr>
        </thead>

        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td>
                <%= link_to blog.weight, blog %>
              </td>
              <td>
                <%= blog.start_time.strftime('%Y/%m/%d') %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>


      <%= form_with(model: @blog, local: true) do |f| %>

        <div class="form-group">
          <div class="form-tag">体重</div>
          <%= f.text_field :weight %>
        </div>

        <div class="form-group">
          <div class="form-tag">体脂肪率</div>
          <%= f.text_field :body_fat %>
        </div>

        <div class="form-group">
          <div class="form-tag">メモ</div>
          <%= f.text_field :memo %>
        </div>

        <div class="form-group">
          <div class="form-tag">画像</div>
          <%= f.attachment_field :image, class: "image" %>
        </div>
          <%= f.datetime_select :start_time %>
        </div>
         <!--カレンダーに出力するためにstart_timeが必要-->

        <div class="submit">
          <%= f.submit %>
        </div>
        <% end %>
    </div>

    <br>


    <br>
    <div class="col-md-8">
      <!--カレンダーと繋がる-->
      <%= month_calendar events: @blogs do |date, blogs| %>
        <%= date.day %>

          <% blogs.each do |blog| %>
            <div>
              <%= link_to blog.weight, blog %>
            </div>
          <% end %>
          <% end %>
    </div>
  </div>
</div>
