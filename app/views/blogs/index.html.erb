<p id="notice">
  <%= notice %>
</p>
<div class="toppage">
  <h1 class="top">カレンダー</h1>
  <br>

  <div class="row">
    <div class="col-md-4">
      <div class="schedule">今日の成果</div>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>タイトル</th>
            <th>日程</th>
          </tr>
        </thead>

        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td>
                <%= link_to blog.weigt , blog %>
              </td>
              <td>
                <%= blog.start_time.strftime("%m-%d") %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>



      <%= form_with(model: @blog, local: true) do |form| %>

        <div class="form-group">
          <div class="form-tag">体重</div>
          <%= form.text_field :weight %>
        </div>


        <div class="form-group">
          <div class="form-tag">体脂肪率</div>
          <%= form.text_field :body_fat %>
        </div>

        <div class="form-group">
          <div class="form-tag">メモ</div>
          <%= form.text_field :mamo %>
          <!--<#%= form.datetime_select :start_time %>-->
        </div>
        
        
        <div class="submit">
          <%= form.submit %>
        </div>
        <% end %>
    </div>

    <br>


    <br>
    <div class="col-md-8">
      <%= month_calendar events: @blogs do |date, blogs| %>
        <%= date.day %>

          <% blogs.each do |blog| %>
            <div>
              <%= link_to blog.weight, blog %>
            </div>
            <% end %>
              <% end %>
    </div>
  </div>
</div>
