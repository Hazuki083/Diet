<!DOCTYPE html>
<html>
  <head>
    <title>Diet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Diet</span></a>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <%= link_to "設定", edit_user_path(current_user), class: 'fas fa-home nav-link text-light'%>
              <%= link_to "入力とカレンダー", blogs_path(current_user), class: 'fas fa-users nav-link text-light' %>
              <%= link_to "グラフ", plan_path(current_user), class: 'fas fa-users nav-link text-light' %>
              <%= link_to "ログアウト", destroy_user_session_path, class: 'fas fa-sign-out-alt nav-link text-light',method: :delete %>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

             <%= flash[:notice] %>
             <%= yield %>

  </body>
